<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.waddys.xcloud</groupId>
		<artifactId>xcloud</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<artifactId>xcloud-webPage</artifactId>
	<packaging>war</packaging>
	
	

	<dependencies>
		<!-- common -->
		<dependency>
			<groupId>org.waddys.xcloud</groupId>
			<artifactId>xcloud-common-base</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.waddys.xcloud</groupId>
			<artifactId>xcloud-common-dboperation</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.waddys.xcloud</groupId>
			<artifactId>xcloud-common-web</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<!-- log -->
		<dependency>
			<groupId>org.waddys.xcloud</groupId>
			<artifactId>xcloud-common-log</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<!-- event -->
		<dependency>
			<groupId>org.waddys.xcloud</groupId>
			<artifactId>xcloud-common-event</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<!-- oss -->
		<dependency>
			<groupId>org.waddys.xcloud</groupId>
			<artifactId>xcloud-oss-api</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<!-- bss -->
		<dependency>
			<groupId>org.waddys.xcloud</groupId>
			<artifactId>xcloud-bss-api</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<!-- vijava -->
		<dependency>
			<groupId>org.waddys.xcloud</groupId>
			<artifactId>xcloud-vijava-impl</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<!-- userMgmt -->
		<dependency>
			<groupId>org.waddys.xcloud</groupId>
			<artifactId>xcloud-user-service</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.waddys.xcloud</groupId>
			<artifactId>xcloud-user-api</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>runtime</scope>
		</dependency>
		<!-- managedvm -->
		<dependency>
			<groupId>org.waddys.xcloud</groupId>
			<artifactId>xcloud-managedvm-api</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>runtime</scope>
		</dependency>
		<!-- pmmgmt -->
		<dependency>
			<groupId>org.waddys.xcloud</groupId>
			<artifactId>xcloud-pm-api</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.waddys.xcloud</groupId>
			<artifactId>xcloud-pm-service</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<scope>runtime</scope>
		</dependency>
        <!-- monitor -->
        <dependency>
            <groupId>org.waddys.xcloud</groupId>
            <artifactId>xcloud-monitor-api</artifactId>
            <version>0.0.1-SNAPSHOT</version>
            <scope>runtime</scope>
        </dependency>
        <!-- alert -->
        <dependency>
            <groupId>org.waddys.xcloud</groupId>
            <artifactId>xcloud-alert-api</artifactId>
            <version>0.0.1-SNAPSHOT</version>
            <scope>runtime</scope>
        </dependency>
		<!-- taskMgmt -->
        <dependency>
            <groupId>org.waddys.xcloud</groupId>
            <artifactId>xcloud-task-api</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.waddys.xcloud</groupId>
            <artifactId>xcloud-task-service</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<mainClass>org.waddys.xcloud.CloudManagerApplication</mainClass>
					<skip>true</skip>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>org.springframework</groupId>
						<artifactId>springloaded</artifactId>
						<version>1.2.5.RELEASE</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<warName>web-dist</warName>
					<warSourceExcludes>testdata/**</warSourceExcludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>dist</id>
			<build>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<excludes>
							<exclude>application-**.properties</exclude>
						</excludes>
					</resource>
				</resources>
			</build>
		</profile>
	</profiles>
</project>